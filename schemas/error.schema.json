{
  "$id": "error.schema.json",
  "description": "Fields about errors of any kind.",
  "type": "object",
  "properties": {
    "error": {
      "type": "object",
      "properties": {
        "properties": {
          "type": "object",
          "required": [ "id", "message", "code", "type", "stack_trace" ],
          "properties": {
            "id": {
              "description": "Unique identifier for the error.",
              "type": "object",
              "required": [ "type" ],
              "properties": {
                "type": {
                  "$ref": "https://raw.githubusercontent.com/ebeahan/ecs-validator/main/schemas/definitions.schema.json#/types/keyword"
                }
              }
            },
            "message": {
              "description": "Error message.",
              "required": [ "type" ],
              "properties": {
              "type": {
                "$ref": "https://raw.githubusercontent.com/ebeahan/ecs-validator/main/schemas/definitions.schema.json#/types/text"
                }
              }
            },
            "code": {
              "description": "Error code describing the error.",
              "required": [ "type" ],
              "properties": {
                "type": {
                  "$ref": "https://raw.githubusercontent.com/ebeahan/ecs-validator/main/schemas/definitions.schema.json#/types/keyword"
                }
              }
            },
            "type": {
              "description": "The type of the error",
              "required": [ "type" ],
              "properties": {
                "type": {
                  "$ref": "https://raw.githubusercontent.com/ebeahan/ecs-validator/main/schemas/definitions.schema.json#/types/keyword"
                }
              }
            },
            "stack_trace": {
              "description": "The stack trace of this error in plain text.",
              "required": [ "type", "fields" ],
              "properties": {
                "type": {
                  "$ref": "https://raw.githubusercontent.com/ebeahan/ecs-validator/main/schemas/definitions.schema.json#/types/keyword"
                },
                "fields": {
                  "type": "object",
                  "required": [ "text" ],
                  "properties": {
                    "text": {
                      "type": "object",
                      "required": [ "type" ],
                      "properties": {
                        "type": {
                          "$ref": "https://raw.githubusercontent.com/ebeahan/ecs-validator/main/schemas/definitions.schema.json#/types/text"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}